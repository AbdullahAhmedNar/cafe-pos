{
  "name": "cafe-pos",
  "version": "1.0.0",
  "description": "نظام كاشير كافيه احترافي باستخدام Electron + React + SQLite",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "npm run build:electron && wait-on http://localhost:5173 && electron .",
    "test:simple": "concurrently \"npm run dev:vite\" \"wait-on http://localhost:5173 && electron scripts/test-app.js\"",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p config/tsconfig.main.json",
    "make": "npm run build && electron-forge make",
    "package": "npm run build && electron-forge package",
    "start": "electron .",
    "test": "vitest",
    "db:setup": "node -e \"const sqlite3 = require('sqlite3').verbose(); const db = new sqlite3.Database('./database/pos.sqlite'); const fs = require('fs'); const schema = fs.readFileSync('./database/schema.sql', 'utf8'); const seed = fs.readFileSync('./database/seed.sql', 'utf8'); db.exec(schema + '\\n' + seed, (err) => { if (err) { console.error('Error setting up database:', err); } else { console.log('Database setup completed successfully!'); } db.close(); });\"",
    "db:reset": "node -e \"const sqlite3 = require('sqlite3').verbose(); const fs = require('fs'); if (fs.existsSync('./database/pos.sqlite')) { fs.unlinkSync('./database/pos.sqlite'); console.log('Database reset completed!'); }\"",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "keywords": [
    "cafe",
    "pos",
    "electron",
    "react",
    "sqlite"
  ],
  "author": "Cafe POS Team",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/sqlite3": "^3.1.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "electron": "^28.1.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@fontsource/amiri": "^5.2.6",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "bcrypt": "^5.1.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^3.0.6",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.0.1",
    "lucide-react": "^0.303.0",
    "pdfmake": "^0.2.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "recharts": "^2.8.0",
    "roboto-font": "^0.1.0",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "build": {
    "appId": "com.cafepos.app",
    "productName": "Cafe POS",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ]
  }
}
